<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont1"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/usea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sad"/>
        <TextView
            android:text="Enter the email address associated with your account."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/usea"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:text="We will email you a link to rest your password."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/usea"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="16sp"/>
        <EditText
            android:fontFamily="@font/usea"
            android:hint="Email"
            android:id="@+id/forgot_email1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:baselineAligned="false"
            android:inputType="textEmailAddress"
            />
        <TextView
            android:id="@+id/errortext"
            android:imeOptions="actionSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#FF5722"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/send_email_btn1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/t_login"

            android:gravity="center"
            android:text="Send"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"/>
    </LinearLayout>
</RelativeLayout>