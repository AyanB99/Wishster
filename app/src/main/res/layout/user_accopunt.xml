<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginTop="?actionBarSize">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:padding="10dp"
            android:background="#ffffff"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color2"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="left"
                    android:text="Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_setting_margin_bottom"
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="Email Address"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingLeft="@dimen/profile_setting_padding"
                    android:paddingRight="@dimen/profile_setting_padding"
                    android:hint="Email Address"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_weight=".2"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:layout_weight=".1"

                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:gravity="left"
                    android:text="Password"
                    android:textColor="@color/text_color3"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color2"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="Change Password"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="Language"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_height="30dp">

                    <Spinner
                        android:id="@+id/language_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/usea"
                        android:outlineSpotShadowColor="#28a34e"
                        android:paddingLeft="@dimen/profile_setting_padding"
                        android:paddingRight="@dimen/profile_setting_padding"
                        android:textDirection="anyRtl" />
                    <!--
                <Spinner




                    android:textAllCaps="true"

                    android:layout_gravity="center_horizontal"
                    android:id="@+id/c_id"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:outlineSpotShadowColor="#28a34e"
                    android:fontFamily="@font/usea"
                    />
                    -->
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="Phone Number"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingLeft="@dimen/profile_setting_padding"
                    android:paddingRight="@dimen/profile_setting_padding"
                    android:hint="Phone Number"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:layout_weight=".1"

                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:gravity="left"
                    android:text="Country"
                    android:textColor="@color/text_color3"
                     />
                    <EditText
                    android:paddingLeft="@dimen/profile_setting_padding"
                    android:paddingRight="@dimen/profile_setting_padding"
                    android:hint="Country"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_weight=".2"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="State/Territory"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingLeft="@dimen/profile_setting_padding"
                    android:paddingRight="@dimen/profile_setting_padding"
                    android:hint="State/Territory"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="City"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingLeft="@dimen/profile_setting_padding"
                    android:paddingRight="@dimen/profile_setting_padding"
                    android:hint="City"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="Postal Code"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingLeft="@dimen/profile_setting_padding"
                    android:paddingRight="@dimen/profile_setting_padding"
                    android:hint="Postal Code"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_weight=".2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color3"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="Birthday"
                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:paddingLeft="@dimen/profile_setting_padding"
                    android:paddingRight="@dimen/profile_setting_padding"
                    android:hint="Email Address"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_corner_with_fill"
                    android:layout_weight=".2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/profile_setting_margin_bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/text_color2"
                    android:layout_centerVertical="true"


                    android:gravity="left"
                    android:text="Deactivate Account"
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/profile_setting_margin"
                    android:fontFamily="@font/neue_haas_grotesk_bold_75"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"

                    android:textSize="16sp"
                    android:background="@drawable/blue_fill_rounded_corner"
                    android:gravity="center"
                    android:text="SAVE"

                    android:layout_width="0dp"
                    android:layout_weight=".1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>