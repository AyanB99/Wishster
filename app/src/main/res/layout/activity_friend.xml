<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sample"
                android:layout_height="40dp"
                android:layout_width="match_parent" />
            <LinearLayout
                android:layout_below="@+id/sample"
                android:id="@+id/cont1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/text_color2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/usea"
                        android:text="Friends"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <EditText
                        android:fontFamily="@font/usea"
                        android:layout_marginRight="20dp"
                        android:paddingLeft="20dp"
                        android:hint="Search"
                        android:layout_alignParentRight="true"
                        android:textColor="#000"
                        android:drawablePadding="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/search_btn"
                        android:drawableRight="@drawable/ic_search_black_24dp"
                        android:layout_height="30dp"
                        android:background="@drawable/connect"
                        android:layout_width="150dp"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                   <LinearLayout

                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="1dp"
                       android:layout_width="0dp"
                       android:layout_height="30dp"
                       android:layout_weight=".1"
                       android:background="@drawable/all">
                       <TextView
                           android:fontFamily="@font/usea"
                           android:gravity="center"
                           android:textColor="#ffffff"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           android:text="All"
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"

                           />
                   </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".1"
                        android:background="@drawable/online">
                       <TextView
                           android:fontFamily="@font/usea"
                           android:gravity="center"
                           android:textColor="#ffffff"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           android:text="Online"
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"

                           />
                   </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight=".1"
                        android:background="@drawable/online">
                       <TextView
                           android:fontFamily="@font/usea"
                           android:gravity="center"
                           android:textColor="#ffffff"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           android:text="Requests "
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"

                           />
                   </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                       android:layout_width="0dp"
                       android:layout_height="30dp"
                       android:layout_weight=".1"
                        android:background="@drawable/block">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/usea"
                            android:gravity="center"
                            android:text="Block"
                            android:textColor="#ffffff"
                             />
                   </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/recyclerView_complant_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@+id/cont1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="50dp"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/menu_container"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tap_to_popup"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/text_color2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:text="Add as a Friend"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:textStyle="bold"/>
        <View
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8DF3F1F1"/>
        <TextView
            android:fontFamily="@font/usea"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:text="Block"
            android:textColor="@color/text_color2"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <View
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8DF3F1F1"/>
        <TextView
            android:textColor="@color/text_color2"
            android:fontFamily="@font/usea"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:text="Pock"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <View
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8DF3F1F1"/>
        <TextView
            android:textColor="@color/text_color2"
            android:fontFamily="@font/usea"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:text="Send Meassage"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <View
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8DF3F1F1"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:padding="0dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight=".1">
    <ImageView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp"

        />
</LinearLayout>
 <LinearLayout
    android:layout_width="0dp"
