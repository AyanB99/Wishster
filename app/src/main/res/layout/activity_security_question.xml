<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/q_container"
    android:layout_below="@+id/toolbar"
    android:background="#ededed"
    tools:context=".security_question.ActivitySecurityQuestion">

    <include
        android:id="@+id/header"
        layout="@layout/signup_and_s_question_header"/>
        <LinearLayout
        android:id="@+id/q_container_main"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_color2"
                android:text=""
                android:id="@+id/questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/usea"
               />
                <LinearLayout

                android:layout_centerInParent="true"
                android:id="@+id/radioContainer_input"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:minHeight="150dp"
                android:layout_below="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight=".1">
                    <EditText
                        android:fontFamily="@font/usea"
                        android:imeOptions="actionNext"
                        android:id="@+id/user_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/r_corner"
                        android:hint="Your answer" />
                    <TextView
                        android:id="@+id/error_msg"
                        android:textColor="#FF5722"
                        android:text=""
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                android:layout_centerInParent="true"
                android:id="@+id/radioContainer_bar"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:minHeight="150dp"
                android:layout_below="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight=".1">
                <LinearLayout
                    android:id="@+id/barLinear"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                        android:fontFamily="@font/usea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="    1"/>
                        <TextView
                        android:fontFamily="@font/usea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="    2"/>
                        <TextView
                        android:fontFamily="@font/usea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="      3"/>
                        <TextView
                        android:fontFamily="@font/usea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="        4"/>
                        <TextView
                        android:fontFamily="@font/usea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="         5"
                        />
                        <TextView
                        android:fontFamily="@font/usea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="     6"
                        android:gravity="center"/>

                </LinearLayout>
                <SeekBar
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:id="@+id/simpleSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/radioContainer"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".1">
                <RelativeLayout

                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/q_cont1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RadioButton
                        android:fontFamily="@font/usea"
                        android:id="@+id/q1"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:checked="true"
                        android:buttonTint="@color/text_color2"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>

                    <RadioButton
                        android:minWidth="100dp"
                        android:fontFamily="@font/usea"
                        android:id="@+id/q2"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="20dp"
                        android:checked="false"
                        android:buttonTint="@color/text_color2"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/q_cont2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:fontFamily="@font/usea"
                        android:id="@+id/q3"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text=""

                        android:layout_marginTop="10dp"
                        android:checked="false"
                        android:buttonTint="@color/text_color2"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>

                    <RadioButton
                        android:fontFamily="@font/usea"
                        android:id="@+id/q4"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:minWidth="100dp"
                        android:layout_marginTop="20dp"
                        android:checked="false"
                        android:buttonTint="@color/text_color2"
                        />
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/q_container_main"
        android:layout_marginTop="60dp"
        >


        <androidx.recyclerview.widget.RecyclerView

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recyclerView_stape_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginTop="60dp"
            >

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".1">
                <Button
                    android:fontFamily="@font/usea"
                    android:id="@+id/previous_question"
                    android:baselineAligned="false"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:text="Back"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/next_btn_shape"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".1">
                <Button
                    android:fontFamily="@font/usea"
                    android:id="@+id/next_question"
                    android:baselineAligned="false"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:text="Next"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/t_login"
                    />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
</RelativeLayout>
</ScrollView>